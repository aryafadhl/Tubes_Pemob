<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="22dp">

    <ImageView
        android:id="@+id/arrow_gagal"
        android:layout_width="27dp"
        android:layout_height="42dp"
        android:src="@drawable/arrowput"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="30dp" />

    <TextView
        android:id="@+id/judul_gagal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Checkout"
        android:textColor="#FEFEFE"
        android:textSize="22dp"
        tools:layout_editor_absoluteX="159dp"
        tools:layout_editor_absoluteY="35dp" />

    <ImageView
        android:id="@+id/cart_gagal"
        android:layout_width="50dp"
        android:layout_height="62dp"
        android:src="@drawable/troli"
        tools:layout_editor_absoluteX="345dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/checkout_gagal"
        android:layout_width="349dp"
        android:layout_height="227dp"
        android:src="@drawable/checkout"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="200dp" />

    <ImageView
        android:id="@+id/do_not_gagal"
        android:layout_width="288dp"
        android:layout_height="248dp"
        android:src="@drawable/do_not"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="189dp" />

    <TextView
        android:id="@+id/pesanan_gagal"
        android:layout_width="237dp"
        android:layout_height="52dp"
        android:text="Pesananmu Gagal :("
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="443dp" />

    <TextView
        android:id="@+id/kesalahan_gagal"
        android:layout_width="286dp"
        android:layout_height="90dp"
        android:text="Terjadi kesalahan pada sistem saat melakukan pembayaran"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="62dp"
        tools:layout_editor_absoluteY="514dp" />

    <Button
        android:id="@+id/button_continue_gagaal"
        android:layout_width="263dp"
        android:layout_height="56dp"
        android:text="Continue"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#102543"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="634dp" />

</androidx.constraintlayout.widget.ConstraintLayout>